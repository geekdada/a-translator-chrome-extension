{
  "name": "A Translator",
  "permissions": [
    "https://a-translator-api.nerdynerd.org/*",
    "https://a-translator-api-cf.nerdynerd.org/*",
    "storage",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "128": "icon-128.png"
    },
    "default_title": "A Translator"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["contentScript.bundle.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "icon-34.png"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

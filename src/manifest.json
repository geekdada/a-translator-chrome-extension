{
  "name": "A Translator",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "128": "icon-128.png"
    },
    "default_title": "A Translator"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["contentScript.bundle.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "icon-34.png"
  ],
  "commands": {
    "open_application": {
      "description": "打开应用",
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "MacCtrl+Command+W"
      }
    },
    "toggle_ocr": {
      "description": "开启 OCR 识别",
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "MacCtrl+Command+E"
      }
    }
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
